!!!
html(ng-app="app")

  head
    title dashdash.ru
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(href="https://netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css", rel="stylesheet")

  body
  
    .container-fluid
      block nav
        .navbar
          .navbar-inner
            a.brand(href="#") DashDash.ru
            ul.nav
              li: a(href="#orders") Orders
              li: a(href="#showcase") Showcase
              li: a(href="#goods") Goods
            block user

     .row-fluid 
       .span6.offset3
         block login

     .row-fluid 
       .span12
         block content
           div(ng-view)

      block footer
        .row-fluid
          .span12
            span.twitter @dashdashru
            span.facebook @dashdash
            span.vkontakte @dashdash

    script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.1.15/angular.min.js")
    script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.1.15/angular-cookies.min.js")
    block scripts
